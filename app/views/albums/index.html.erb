<h1>Albums</h1>
<% if @albums.any? %>
  <ul>
    <% @albums.each do |album| %>
      <li><%= link_to album.name, album_path(album) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no albums yet.</p>
<% end %>
<%= button_to "Create new album",
              new_album_path,
              method: :get %>
